<div class="containerBottom">
    <div class="swiper mySwiper">
    <section class="swiper-wrapper packages s1">
        <!-- <label for="*" class="control"><</label> -->
        <% dataBasePackages.forEach((package, i) => { %>
            <article class="swiper-slide product p<%=i+1%>">
                <div class="picturePackage"><img class="pictureIn" src="/img/activities/<%= package.image  %>"  alt="paquete"></div>
                <a href="/packages/detail/<%= package.id %> "><p><%= package.name  %></p></a>
            </article>
          
        <% }) %>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>

        <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script> 
        var swiper = new Swiper(".mySwiper", {
            slidesPerView: 4,
            spaceBetween: 30,
            slidesPerGroup: 4,
            pagination: {
              el: ".swiper-pagination",
              clickable: true,
            },
            navigation: {
              nextEl: ".swiper-button-next",
              prevEl: ".swiper-button-prev",
            },
    });
    </script>
        <!-- <label for="*" class="control f">></label> -->
    </div>
    </section>
    <section class="clientMessages">
        <article class="card">
            <label for="*" class="controlMessages">></label>
            <img class="userImage" src="img/FOTORANDOM2.jpg" alt="imagen de usuario">
            <div class="message">
                <strong>Pepito Cawabonga</strong>
                <p>"Una experiencia increibleee! Pase mi finde a pura adrenalina. Muy divertido!!!"</p>
            </div>
        </article>
    </section>
    </div>