<div class="swiper mySwiper">
  <p class="anouncingTitle">Actividades en Oferta</p>
    <div class="swiper-wrapper">
      <% offerPackages.forEach((package, i) => { %>
        <article class="swiper-slide">
          <div class="product">
            <div class="picturePackage"><img class="pictureIn" src="/img/activities/<%= package.image  %>"  alt="paquete"></div>
            <a href="/packages/detail/<%= package.id %> "><p><%= package.name  %></p></a>
          </div>
        </article>
      
      <% }) %>

    </div>
    <div class="swiper-pagination"></div>
</div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

